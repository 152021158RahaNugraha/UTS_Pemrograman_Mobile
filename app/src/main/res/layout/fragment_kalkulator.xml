<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/calc_light_bg"

    tools:context=".KalkulatorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom|end"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_hasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0"

            android:textColor="@color/calc_text_dark"

            android:textSize="80sp" />
    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="12dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_clear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_light_grey_ripple"
            android:text="C"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pangkat"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_light_grey_ripple"
            android:text="x²"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_akar"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_light_grey_ripple"
            android:text="√"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bagi"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/btn_blue_ripple"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="34sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_7"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="7"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_8"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="8"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_9"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="9"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kali"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/btn_blue_ripple"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="34sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_4"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="4"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="5"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_6"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="6"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_kurang"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/btn_blue_ripple"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="34sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="1"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="2"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="3"
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_tambah"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/btn_blue_ripple"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="34sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_0"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_stadium_ripple"
            android:text="0"
            android:textColor="@color/calc_text_dark"

            android:gravity="center"
            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_koma"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"

            android:background="@drawable/btn_calc_white_ripple"
            android:text="."
            android:textColor="@color/calc_text_dark"

            android:textSize="34sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_equals"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_margin="6dp"
            android:background="@drawable/btn_blue_ripple"
            android:text="="
            android:textColor="@color/white"
            android:textSize="34sp" />

    </GridLayout>

</LinearLayout>